<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putihGelap1"
    >
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/green1">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bimbingan Ibadah"
            android:textColor="@color/putih"
            android:textSize="@dimen/title_font"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/back"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/mpm"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_standard"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customToolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/mpm"
                android:layout_marginTop="30dp"
                android:id="@+id/logo"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height100"
                android:layout_below="@+id/logo"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_standard"
                android:layout_marginTop="40dp"
                android:id="@+id/ln_1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_rl_green"
                    android:id="@+id/rl_bersuci"
                    android:elevation="@dimen/ele4"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_standard"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height60"
                        android:src="@drawable/wudlu"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="Bersuci"
                        android:layout_marginTop="@dimen/margin_small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_rl_green"
                    android:id="@+id/rl_sholat"
                    android:elevation="@dimen/ele4"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height60"
                        android:src="@drawable/sholat_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="Shalat"
                        android:layout_marginTop="@dimen/margin_small"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height100"
                android:layout_below="@+id/ln_1"
                android:id="@+id/ln_2"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_standard"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_rl_green"
                    android:id="@+id/rl_zakat"
                    android:elevation="@dimen/ele4"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_standard"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height60"
                        android:src="@drawable/zakat"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="Zakat"
                        android:layout_marginTop="@dimen/margin_small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_rl_green"
                    android:id="@+id/rl_puasa"
                    android:elevation="@dimen/ele4"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_standard"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height60"
                        android:src="@drawable/puasa"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="Puasa"
                        android:layout_marginTop="@dimen/margin_small"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height100"
                android:layout_below="@+id/ln_2"
                android:id="@+id/ln_3"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_standard"
                android:layout_marginLeft="@dimen/margin_standard"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_rl_green"
                    android:id="@+id/rl_haji"
                    android:elevation="@dimen/ele4"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_standard"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/width50"
                        android:layout_height="@dimen/height60"
                        android:src="@drawable/kabbah"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putih"
                        android:textSize="@dimen/title_font"
                        android:text="Melaksanakan Haji"
                        android:layout_marginTop="@dimen/margin_small"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
